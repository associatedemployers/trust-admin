<div class="resource-view">
  {{#if savedTransition}}
    <h2 class="text-center text-danger">
      {{#if existingSession}}
        Your session has expired, please log in again.
      {{else}}
        Whoops, it looks like you need to log in to view that page.
      {{/if}}
    </h2>
    <hr />
  {{/if}}
  <div class="login-container">
    <form class="popout-panel login-panel login-panel-animate" {{action "login" on="submit"}}>
      <h2 class="text-center">Login</h2>
      <hr />
      <div class="form-group {{if validEmail 'valid'}} {{if loginError 'hasError'}}">
        {{input type="email" class="form-control input-lg" value=email placeholder="Email Address"}}
      </div>

      <div class="form-group {{if validPassword 'valid'}} {{if loginError 'hasError'}}">
        {{input type="password" class="form-control input-lg" value=password placeholder="Password"}}
      </div>

      {{#if loginError}}
        <p class="text-center text-danger">{{{loginError}}}</p>
      {{/if}}

      <div class="form-group">
        <button type="submit" class="btn btn-success btn-block btn-lg" disabled={{notAllowSubmit}}>
          Login{{#if loggingIn}} <i class="fa fa-fw fa-spin fa-spinner"></i>{{/if}}
        </button>
      </div>

      <ul class="login-links">
        <li><a href="#">Forgot your password?</a></li>
      </ul>
    </form>

    <div class="login-panel-back login-panel-animate">

    </div>
  </div>
</div>
