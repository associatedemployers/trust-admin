<div class="row resource-view">
  <div class="col-md-3">
    Filters
  </div>
  <div class="col-md-9">
    {{!Sorting}}
    <div class="list-group resource-list-group">
      {{#each employee in content}}
        {{render "employee-list-item" employee}}
      {{else}}
        <h2 class="text-center"><i class="fa fa-exclamation-triangle"></i> No employees found.</h2>
      {{/each}}
    </div>
  </div>
</div>
