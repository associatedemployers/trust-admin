<ul class="list-group">
  {{#each contact in content.contactMethods itemController='contact-method'}}
    <li class="list-group-item">
      <i {{bind-attr class=":fa :fa-fw contact.isEmail:fa-at contact.isPhone:fa-phone"}}></i>
      <a {{bind-attr href=contact.link}}>{{contact.decoratedValue}}</a>
      {{#if contact.ext}} ext. {{contact.ext}}{{/if}}

      <span class="pull-right text-muted">
        {{title-case contact.type}}
      </span>
    </li>
  {{else}}
    <div class="alert alert-info alert-dismissible alert-pad" role="alert">
      <button type="button" class="close" data-dismiss="alert">
        <span aria-hidden="true">&times;</span><span class="sr-only">Close</span>
      </button>
      <i class="fa fa-fw fa-info-circle"></i> No Contact Methods Found.
    </div>
  {{/each}}
</ul>
