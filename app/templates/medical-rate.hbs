<div class="row popout-panel">
  <div class="col-md-10">
    <hgroup>
      <h2><i class="fa fa-dollar"></i> {{content.planNumber}} ({{#link-to 'medical-plan' content.plan}}{{content.plan.name}}{{/link-to}}) <small>{{format-currency content.deductible}} Deductible</small></h2>
      {{#if content.company}}
        <h4>Rate for {{#link-to 'company' content.company}}{{content.company.name}}{{/link-to}}</h4>
      {{/if}}
    </hgroup>
    <div>
      <ul class="text-muted resource-info-list resource-quick-info">
        <li><strong>Plan Number:</strong> {{content.planNumber}}</li>
        <li><strong>Record ID (new):</strong> {{content.id}}</li>
        <li><strong>EBMS #:</strong> {{content.ebmsNumber}}</li>
        <li><strong>Legacy Name:</strong> {{content.name}}</li>
        <li><strong>Creation Date:</strong> {{format-moment content.time_stamp}} <i>({{time-ago content.time_stamp}})</i></li>
      </ul>
    </div>
  </div>
  <div class="col-md-2 resource-controls">
    <button class="btn btn-success">
      <i class="fa fa-fw fa-pencil"></i>
    </button>

    <div class="dropdown">
      <button class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
        <i class="fa fa-fw fa-gear"></i> <span class="caret"></span>
      </button>
      <ul class="dropdown-menu dropdown-menu-right" role="menu">
        <li><a href="#">Delete</a></li>
      </ul>
    </div>
  </div>
</div>

{{outlet}}
