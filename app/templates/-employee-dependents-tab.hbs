<ul class="list-group">
  {{#each dependent in content.dependents itemController='dependent-item'}}
    <li class="list-group-item">
      {{#link-to 'employee.dependent' content.id dependent.id}}{{dependent.fullName}}{{/link-to}}

      <span class="pull-right text-muted">
        {{dependent.contextualRelationship}}
      </span>
    </li>
  {{else}}
    <div class="alert alert-info alert-dismissible alert-pad" role="alert">
      <button type="button" class="close" data-dismiss="alert">
        <span aria-hidden="true">&times;</span><span class="sr-only">Close</span>
      </button>
      <i class="fa fa-fw fa-info-circle"></i> No Dependents Found.
    </div>
  {{/each}}
</ul>
