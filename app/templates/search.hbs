<h1><i class="fa fa-fw fa-search"></i> Quick Find</h1>
<hr />
<form {{action "search" on="submit"}}>
  <div class="row">
    <div class="col-sm-10">
      <div class="form-group finder">
        {{view "select" class="form-control input-sm model-select" content=models optionValuePath="content.v" optionLabelPath="content.l" value=modelSelection prompt="Search All Types"}}

        {{input type="search" class="typeahead form-control" placeholder="Search" value=query disabled=disableInput}}
      </div>
    </div>
    <div class="col-sm-2">
      <div class="form-group">
        <button type="submit" class="btn btn-default btn-block">Find</button>
      </div>
    </div>
  </div>
</form>
{{#unless result}}
  <h3>Press enter or click &quot;Find&quot; to search{{#if query}} for {{query}}{{/if}}</h3>
{{/unless}}
<small class="text-muted text-center">Searching {{#if modelSelection}}in {{pluralize-text modelSelection}}{{else}}in all types{{/if}}{{#if query}} for {{query}}{{/if}}...</small>
<hr />

<ul>
  {{#each result in content}}
    <li>{{result.name.first}}</li>
  {{else}}

  {{/each}}
</ul>
