<div class="employees-pane">
  {{#if model.isPending}}
    <i class="fa fa-spin fa-spinner"></i>
  {{else}}
    <ul class="nav nav-tabs" role="tablist">
      <li class="{{if showingActive 'active'}}">
        <a href="#" {{action "show" "active"}}>Active</a>
      </li>
      <li class="{{if showingTerminated 'active'}}">
        <a href="#" {{action "show" "terminated"}}>Terminated</a>
      </li>
      <div class="pull-right nav-tab-inline">
        <a href="#" {{action "toggleProperty" "sortasc"}}>
          {{#if showingActive}}Hire{{else}}Termination{{/if}} date <i class="fa {{if sortasc 'fa-caret-down' 'fa-caret-up'}}"></i>
        </a>
      </div>
    </ul>

    <div class="tab-model limited-pane">
      <ul class="list-group">
        {{#if showingActive}}
          {{#each employees.active as |employee|}}
            <li class="list-group-item">
              {{#link-to 'employee' employee}}
                {{employee.fullName}}
                <span class="pull-right text-muted">
                  Hire date: {{format-moment employee.legacyClientEmploymentDate}}
                </span>
              {{/link-to}}
            </li>
          {{else}}
            <li>No Active Employees</li>
          {{/each}}
        {{/if}}
        {{#if showingTerminated}}
          {{#each employees.terminated as |employee|}}
            <li class="list-group-item">
              {{#link-to 'employee' employee}}
                {{employee.fullName}}
                <span class="pull-right text-muted">
                  Termination date: {{format-moment employee.legacyClientTerminationDate}}
                </span>
              {{/link-to}}
            </li>
          {{else}}
            <li>No Terminated Employees</li>
          {{/each}}
        {{/if}}
      </ul>
    </div>
  {{/if}}
</div>
