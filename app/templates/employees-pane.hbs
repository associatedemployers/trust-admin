<h4>Employees</h4>
{{#if content.isPending}}
  <i class="fa fa-spin fa-spinner"></i>
{{else}}
  <ul class="nav nav-tabs" role="tablist">
    <li {{bind-attr class="showingActive:active"}}>
      <a href="#" {{action "show" "active"}}>Active</a>
    </li>
    <li {{bind-attr class="showingTerminated:active"}}>
      <a href="#" {{action "show" "terminated"}}>Terminated</a>
    </li>
    <div class="pull-right nav-tab-inline">
      <a href="#" {{action "toggleProperty" "sortasc"}}>
        Hire date <i {{bind-attr class=":fa sortasc:fa-caret-down:fa-caret-up"}}></i>
      </a>
    </div>
  </ul>

  <div class="tab-content limited-pane">
    <ul class="list-group">
      {{#if showingActive}}
        {{#each employee in employees.active}}
          <li class="list-group-item">
            {{#link-to 'employee' employee}}
              {{employee.fullName}}
              <span class="pull-right text-muted">
                Hire date: {{format-moment employee.legacyClientEmploymentDate}}
              </span>
            {{/link-to}}
          </li>
        {{else}}
          <li>No Active Employees</li>
        {{/each}}
      {{/if}}
      {{#if showingTerminated}}
        {{#each employee in employees.terminated}}
          <li class="list-group-item">
            {{#link-to 'employee' employee}}
              {{employee.fullName}}
              <span class="pull-right text-muted">
                Termination date: {{format-moment employee.legacyClientTerminationDate}}
              </span>
            {{/link-to}}
          </li>
        {{else}}
          <li>No Terminated Employees</li>
        {{/each}}
      {{/if}}
    </ul>
  </div>
{{/if}}
