{{#if isEditing}}
  {{query.type}}
  <div class="form-group">
    {{input/x-select content=fields selection=fieldSelection action=(action (mut fieldSelection))}}
  </div>
  <div class="form-group">
    {{query.compareType}}
  </div>
  <div class="form-group">
    {{query.value}}
  </div>
{{else}}
  {{query.type}} {{query.field}} {{query.compareType}} {{query.value}}
{{/if}}
