<div class="row">
  <div class="{{if selectedCoverages 'col-md-4' 'hidden'}}">
    <h3>
      {{title-case selectedCoverageType}}
      <span class="pull-right">
        <a href="#" {{action "deselectCoverage"}}><i class="fa fa-fw fa-times"></i></a>
      </span>
    </h3>
    <hr />
    {{#each selectedCoverages as |plan|}}
      <li>
        <span class="label label-success">{{plan.planNumber}}</span>
        {{#if linkToCoverage}}
          {{#link-to linkToCoverage plan.id}}
            {{#if plan.legacyNetwork}}{{plan.legacyNetwork}}{{else}}{{plan.name}}{{/if}}
          {{/link-to}}
        {{/if}}
      </li>
    {{/each}}
  </div>

  <div class="{{if selectedCoverages 'col-md-8' 'col-md-12'}}">
    <table class="table table-striped text-center legend-text-right">
      <thead>
      <tr>
        <th></th>
        {{#each coverage as |levels|}}
          <th>{{title-case levels.type}}</th>
        {{/each}}
      </tr>
      </thead>
      <tbody>
      {{! Employee}}
      <tr>
        <th>Employee</th>
        {{#each coverage as |levels|}}
          <td>
            {{#if levels.tableLevel.employee}}
              <a href="#" {{action "selectCoverage" levels.type}}>
                <i class="fa fa-check text-success"></i>
              </a>
            {{else}}
              <i class="fa fa-times text-danger"></i>
            {{/if}}
          </td>
        {{/each}}
      </tr>
      {{! Spouse}}
      <tr class="{{unless employee.isMarried 'disabled-strike'}}">
        <th>Spouse</th>
        {{#each coverage as |levels|}}
          <td>
            {{#if levels.tableLevel.spouse}}
              <a href="#" {{action "selectCoverage" levels.type}}>
                <i class="fa fa-check text-success"></i>
              </a>
            {{else}}
              <i class="fa fa-times text-danger"></i>
            {{/if}}
          </td>
        {{/each}}
      </tr>
      {{! Children}}
      <tr>
        <th>Children</th>
        {{#each coverage as |levels|}}
          <td>
            {{#if levels.tableLevel.children}}
              <a href="#" {{action "selectCoverage" levels.type}}>
                <i class="fa fa-check text-success"></i>
              </a>
            {{else}}
              <i class="fa fa-times text-danger"></i>
            {{/if}}
          </td>
        {{/each}}
      </tr>
      </tbody>
    </table>
  </div>
</div>
